<h2><%= @restaurant.name %></h2>
<!-- <p>Find me in app/views/restaurants/show.html.erb</p> -->
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<h3>Reviews</h3>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-warning" %>
<%= link_to "Back to the restaurants list", restaurants_path, class: "btn btn-primary" %>
